.VueCarousel-pagination
  bottom 15%
  position absolute
  .VueCarousel-dot-container
    display flex
    left 15%
    position absolute
    .VueCarousel-dot-inner
      background white!important
      border solid 1px black!important
      width 14px!important
      height 14px!important
