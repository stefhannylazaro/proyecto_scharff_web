  width 100vw
  height 100vh
  top 0
  z-index 3
  position absolute
  background rgba(0, 0, 0, 0.4)

.error-msg-email
  font-size .8rem
  color c-principal
  display: flex;
  justify-content: center;

.icon-exit-p0
  min-width 4rem
  .btn__content
    padding 0!important

@media screen and (max-width: 599px)
  .icon-user-p0
    min-width 4rem

