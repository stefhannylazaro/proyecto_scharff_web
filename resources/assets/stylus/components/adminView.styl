.ActiveItemAdmin
  border-left solid .4rem c-text-title-pink

.admin-user-text
  text-align left
  display flex
  flex-direction column
  font-size .8rem
  font-family Carnas-Light
  .a-user-name
    font-size 1rem
    font-family Carnas-Bold

.a-user-img
  width 37px
  height 37px

.stepper-width-head
  width 500px
  margin 0 auto

.stepper-control
  .stepper__step__step
    background-color white!important
    color black-transparent!important
    font-weight bold
    border solid .1rem black-transparent!important
  &.stepper__step--active
    .stepper__step__step
      // background-color white!important
      color c-text-title-pink!important
      // font-weight bold
      border solid .1rem c-text-title-pink!important
  &.stepper__step--complete
    span
      i
        color black-transparent!important

.section-one-stepper
  h2
    font-size 1.7rem
  span
    font-size .95rem
  .info-stepper
    display flex
    justify-content flex-end
    align-items center
    font-size .9rem
    margin-top -1.5rem
    a
      color black-light
      margin-top .2rem
      margin-left .3rem

.imagen-container-stepper
  display flex
  align-items center
  justify-content center
  // background red
  height 15rem

.size-lockers-container
  background white
  border solid .1rem light-white
  cursor pointer
  position relative
  // &:nth-child(2)
  //   border solid c-text
  //   border-width .1rem 0rem

.size-lockers-title
  span
    color c-text
    font-size .9rem

.lockerActive
  border solid .1rem c-btn-active

.locker-checked
  position absolute
  top 0.5rem
  left .5rem
  color c-btn-active!important

@media screen and (max-width: 500px)
  .align-elements-reservation
    display flex
    width 100%
  .info-stepper
    margin-top 0!important
    margin-bottom 1rem

@media screen and (max-width: 390px)
  .nopadding-w390
    padding 0!important

.wrapper-step-two
  position relative
  margin 1rem auto
  display flex
  justify-content center

.img-step-two
  position absolute
  left -3rem
  z-index: 0
  bottom -21px

@media screen and (max-width: 460px)
  .img-step-two
    // position absolute
    left -2.4rem
    // z-index 0
    bottom -19px
    width 24rem

.min-width-step-two
  padding 4rem 2rem 3rem
  position relative
  border c-btn-active solid .1rem
  background white

.text-step-two
  // position absolute
  z-index 1
  input
    border-bottom solid 1px
    margin-bottom 1.2rem
    padding-left 1rem
    // text-align center
    width 18rem
    outline none

@media screen and (max-width: 460px)
  .min-width-step-two
    min-width 19rem
    input
      width 100%
