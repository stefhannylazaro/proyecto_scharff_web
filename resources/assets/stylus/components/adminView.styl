    width 15rem

.wrapper-info-finish
  border: solid 0.1rem c-text-title-pink;
  width: 30rem;
  text-align: center;
  padding: 2.5rem 5rem;
  h3
    font-size 1.5rem
  p
    font-size .85rem

.drawer-admin-border
  border-left solid .1rem c-principal

.monto-info
  color c-principal
