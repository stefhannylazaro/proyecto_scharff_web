.input-date-reservation
  .input-group__input
    border solid .1rem black
    .input-group__prepend-icon
      order 2
    input
      order 1
      text-align center
  .input-group__details::before
    height 0

.input-date-reservation.input-group--focused
  label
    display none!important

.labelDisplayNone
  label
    display none

.menu__activator
