.input-complaints
  span
    padding-bottom .5rem
    i
      color c-btn-active
  .error-field
    border solid .1rem c-principal!important

.input--modifier
  padding-top .5rem
  .multiselect__tags
    height 32px
    min-height auto!important
    padding 6px 40px 0 8px
